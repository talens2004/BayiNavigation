<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/popup_bg">
    <TextView
            android:id="@+id/tv_title"
            android:layout_height="36dip"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#7e7e7e"
            android:text="所选位置坐标"
            android:background="@drawable/popup_titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/point_X"
            android:layout_height="36dip"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:textSize="22sp"
            android:textColor="#7e7e7e"
            android:text="X：45,38065"/>

        <TextView
            android:id="@+id/point_Y"
            android:layout_height="36dip"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:textSize="22sp"
            android:textColor="#7e7e7e"
            android:text="Y：205,76098"/>


        <include layout="@layout/split_view_x"/>


        <EditText
            android:id="@+id/edit_point_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:visibility="visible"
            android:hint="名称：x_45,38065_y_205,76098"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/button_white_normal"/>
    </LinearLayout>


    <include layout="@layout/split_view_x"/>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_height="42dip"
            android:layout_width="112dip"
            android:textColor="#FF9D9D9D"
            android:textSize="16sp"
            android:text="关闭"
            android:background="@drawable/button_white_selector"/>
        <Button
            android:id="@+id/btn_ok"
            android:layout_marginLeft="9dip"
            android:layout_height="42dip"
            android:layout_width="110dip"
            android:textSize="16sp"
            android:textColor="#FFFFFFFF"
            android:text="收藏"
            android:background="@drawable/button_green_selector"/>
    </LinearLayout>
</LinearLayout>
      